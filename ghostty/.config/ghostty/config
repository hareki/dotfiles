# Updates
auto-update = download
auto-update-channel = stable

# UI
theme = Catppuccin Mocha
macos-titlebar-style = hidden
mouse-hide-while-typing = true
copy-on-select = clipboard

adjust-cell-height = 20%
window-padding-balance = true
window-padding-x = 10
window-padding-y = 12,6

# Font
font-size = 20.5
adjust-icon-height = 15%
font-style = SemiBold
font-family = Maple Mono NF
font-feature = +calt, +liga, -zero, -ss02
font-style-bold  = ExtraBold
font-style-italic  = SemiBold Italic
font-style-bold-italic  = ExtraBold Italic

# background-opacity = 0.8
# background-blur = true

# Shell & Cursor
shell-integration = zsh

# Cursor feature will mess up the cursor shape I set in zsh vi-mode
shell-integration-features = no-cursor

cursor-style = bar
cursor-style-blink = true

# Cursor
cursor-color = #cdd6f4	
cursor-text = #11111b
# custom-shader = shaders/cursor_trail.glsl

# Keybindings
# Mapped heavily for tmux + neovim + zsh workflows
# ----------------------

macos-option-as-alt = true
# Remap cmd + keys to alt + keys so that tmux can understand them.
# They was previously esc:<key> but .tmux.conf does not support those key sequences correctly...

# Special sequences for zsh keybinding to consume in keymaps.zsh, since we can't normally bind shift key
keybind = cmd+shift+o=text:\x1b[1;6O
keybind = ctrl+shift+y=text:\x1b[1;6Y

# zsh autin-search
keybind = cmd+f=text:\x1bf

keybind = cmd+r=text:\x1br
keybind = cmd+space=text:\x1b\x20

# Clipboard management
keybind = cmd+c=text:\x1bc 
keybind = cmd+x=text:\x1bx
keybind = cmd+v=text:\x1bv 
keybind = cmd+s=text:\x1bs 

# Since cmd + c/v/x are already mapped to alt + c/x/v to be used in neovim and tmux:
keybind = cmd+shift+c=copy_to_clipboard
keybind = cmd+shift+v=paste_from_clipboard

# Copilot suggestion navigation
keybind = cmd+]=text:\x1b]
keybind = cmd+[=text:\x1b[

# Toggle floating terminal (Nvim + FloaX)
keybind = cmd+t=text:\x1bt
# Toggle terminal tab (Nvim)
keybind = cmd+shift+t=text:\x1bT

# Tmux prefix
keybind = cmd+d=text:\x1bd

# Tmux pane navigation 
keybind = cmd+m=text:\x1bm
keybind = cmd+n=text:\x1bn
keybind = cmd+e=text:\x1be
keybind = cmd+i=text:\x1bi

# Tmux window navigation
keybind = cmd+1=text:\x1b1
keybind = cmd+2=text:\x1b2
keybind = cmd+3=text:\x1b3
keybind = cmd+4=text:\x1b4
keybind = cmd+5=text:\x1b5
keybind = cmd+6=text:\x1b6
keybind = cmd+7=text:\x1b7
keybind = cmd+8=text:\x1b8
keybind = cmd+9=text:\x1b9
keybind = cmd+0=text:\x1b0
